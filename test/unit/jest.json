{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "coverageDirectory": "coverage/unit",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["./src/**/*.(t)s"],
  "globalSetup": "./test/unit/global-setup.ts",
  "globalTeardown": "./test/unit/global-teardown.ts"
}
